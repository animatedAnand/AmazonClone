<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.SignInFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_320sdp"
                android:layout_height="@dimen/_300sdp"
                android:src="@drawable/image_prod"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/app_icon"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_13sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India's last minute App"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_13sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogIn or SignUp"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_13sdp"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="19dp"
                app:boxCornerRadiusBottomEnd="17dp"
                app:boxCornerRadiusBottomStart="17dp"
                app:boxCornerRadiusTopEnd="17dp"
                app:boxCornerRadiusTopStart="17dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone_number_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/call"
                    android:drawablePadding="9dp"
                    android:hint="Enter mobile number"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_sign_in"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="26dp"
                android:text="Continue"
                android:textAllCaps="false"
                android:backgroundTint="#8d99ae"
                app:cornerRadius="18dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>